# Craftalism Deployment - Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit the actual .env file to Git!

# ========================================
# Version Control
# ========================================
# Specify which versions of each service to deploy
API_VERSION=v0.1.0
DASHBOARD_VERSION=v0.1.0
MINECRAFT_IMAGE_VERSION=latest

# ========================================
# Database Configuration
# ========================================
DB_NAME=craftalism
DB_USER=craftalism
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_123

# ========================================
# API Configuration
# ========================================
# Secret key for API authentication (generate with: openssl rand -hex 32)
API_SECRET=CHANGE_THIS_TO_RANDOM_SECRET_KEY

# Port where API will be accessible on host
API_PORT=3000

# ========================================
# Dashboard Configuration
# ========================================
# URL where the API is accessible from the browser
# For local: http://localhost:3000
# For production: https://api.yourdomain.com
VITE_API_URL=http://localhost:3000
VITE_API_TIMEOUT=10000

# Port where dashboard will be accessible on host
DASHBOARD_PORT=8080

# ========================================
# Minecraft Server Configuration
# ========================================
# Server type (PAPER, SPIGOT, PURPUR, etc.)
MINECRAFT_TYPE=PAPER

# Minecraft version
MINECRAFT_VERSION=1.20.4

# Server resources
MINECRAFT_MEMORY=4G
MINECRAFT_MAX_PLAYERS=50

# Gameplay settings
MINECRAFT_DIFFICULTY=normal
MINECRAFT_MODE=survival
MINECRAFT_MOTD=ยง6Craftalism Economy Server ยง7- Play & Earn!

# Online mode (TRUE for online servers, FALSE for cracked)
MINECRAFT_ONLINE_MODE=TRUE

# Performance settings
MINECRAFT_VIEW_DISTANCE=10
MINECRAFT_SIMULATION_DISTANCE=10

# Server port
MINECRAFT_PORT=25565

# RCON password for remote server management
RCON_PASSWORD=CHANGE_THIS_RCON_PASSWORD

# ========================================
# Security Notes
# ========================================
# 1. Generate strong passwords (use: openssl rand -base64 32)
# 2. Never commit .env to Git (already in .gitignore)
# 3. Rotate secrets periodically
# 4. Use different passwords for production vs development
# 5. Back up this file securely (encrypted)

# ========================================
# Production Checklist
# ========================================
# [ ] Changed all default passwords
# [ ] Generated secure API_SECRET
# [ ] Set correct VITE_API_URL for production
# [ ] Configured appropriate MINECRAFT_MEMORY
# [ ] Set MINECRAFT_ONLINE_MODE appropriately
# [ ] Backed up .env file securely
# [ ] Added .env to .gitignore
# [ ] Tested all services start correctly
